<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle" >
        <item name="android:textSize">40sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textColorHint">@color/button_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyle.Digit" >
        <item name="android:textColor">@color/digit_button_text</item>
        <item name="android:background" >@color/digital_button_color</item>
    </style>
    <style name="ButtonStyle.Sign" >
       <item name="android:background" >@color/button_color</item>
    </style>

    <style name="TextViewStyle" >
        <item name="android:textColor">@color/digit_button_text</item>
    </style>

</resources>
